<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/md_theme_dark_surface</item>
        <item name="android:navigationBarColor">@color/md_theme_dark_surface</item>
    </style>

    <style name="Theme.Starting" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.App</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/transparent_image</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
